<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Allow access to storage files
    RewriteRule ^storage/(.*)$ storage/$1 [L,NC]

    # -----------------------------
    # ðŸ”’ Security Headers
    # -----------------------------
    <IfModule mod_headers.c>
        Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        Header always set X-Frame-Options "SAMEORIGIN"
        Header always set X-Content-Type-Options "nosniff"
        Header always set X-XSS-Protection "1; mode=block"
        Header always set Referrer-Policy "strict-origin-when-cross-origin"
        Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), fullscreen=(self), picture-in-picture=(self)"
    </IfModule>

    # --- Optional: Force HTTPS ---
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Pass Authorization header to Laravel
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # XSRF header support
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # -------------------------------------------------------------
    # âœ… Allow access to Laravel /storage/ files
    # -------------------------------------------------------------
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # If a request points to /storage but no file found â†’ 404
    RewriteCond %{REQUEST_URI} ^/storage/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ - [R=404,L]

    # -------------------------------------------------------------
    # âœ… Hide .php extension
    # -------------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+?)/?$ $1.php [L]

    # Redirect /foo.php â†’ /foo
    RewriteCond %{THE_REQUEST} \s/([^\s?]*?)\.php[?\s] [NC]
    RewriteRule ^ /%1 [R=301,L]

    # -------------------------------------------------------------
    # âœ… Handle Laravel routes (Front Controller)
    # -------------------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# -------------------------------------------------------------
# âœ… Allow storage file access directly (in case host blocks it)
# -------------------------------------------------------------
<IfModule mod_authz_core.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|mp4|mov|avi|webm|svg|pdf|docx?)$">
        Require all granted
    </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|mp4|mov|avi|webm|svg|pdf|docx?)$">
        Order allow,deny
        Allow from all
    </FilesMatch>
</IfModule>
